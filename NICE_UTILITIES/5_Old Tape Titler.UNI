100 REM PROGRAM TO TITLE TAPE FILES110 INIT 120 PAGE 130 DIM A$(36),H$(128),T$(1)140 READ A$150 DATA "ABCDEFGHIJKLMNOPQRSTUVWXYZ!#$%&*.:;?"160 PRINT USING 170:170 IMAGE 17T"*****  TAPE FILE TITLING PROGRAM  *****"180 PRINT @33,0:0,0,0190 PRINT 200 PRINT "NUMBER OF FILE TO BE TITLED (0 ==> END)? ";210 INPUT F220 F=INT(F)230 IF F<>0 THEN 260240 END 260 IF F=>1 AND F<=255 THEN 310270 GOSUB 910280 PRINT "ILLEGAL FILE NUMBER"290 PRINT 300 GO TO 180310 FIND F320 PRINT @33,0:0,0,1330 FIND F340 INPUT @33:H$350 PRINT @33,0:0,0,0360 T$=SEG(H$,9,1)370 IF T$<>"L" THEN 410380 GOSUB 910390 PRINT "CAN'T TITLE ""LAST"" FILE!"400 GO TO 290410 T$=SEG(H$,27,1)420 IF T$<>"S" THEN 460430 GOSUB 910440 PRINT "CAN'T TITLE A SECRET FILE!"450 GO TO 290460 L$=SEG(H$,27,6)470 IF L$="      " THEN 500480 PRINT USING 490:L$490 IMAGE "CURRENT TITLE: "6A10X"NEW "S500 PRINT "TITLE? ";510 INPUT L$520 L=LEN(L$)530 IF L=0 THEN 180540 FOR I=L TO 1 STEP -1550 T$=SEG(L$,I,1)560 IF T$<>" " THEN 590570 L$=REP("",I,1)580 NEXT I590 L=LEN(L$)600 IF L<=6 THEN 650610 GOSUB 910620 PRINT "MAXIMUM TITLE LENGTH 6 CHARACTERS"630 PRINT 640 GO TO 460650 IF L=0 THEN 790660 FOR I=1 TO L670 T$=SEG(L$,I,1)680 T=POS(A$,T$,1)690 IF T<>0 THEN 730700 GOSUB 910710 PRINT "ILLEGAL CHARACTER(S) IN TITLE"720 GO TO 630730 NEXT I740 T$=SEG(L$,1,1)750 IF T$<>"S" THEN 790760 GOSUB 910770 PRINT "FIRST CHARACTER OF TITLE MUST NOT BE ""S"""780 GO TO 630790 L$=L$&"      "800 L$=SEG(L$,1,6)810 H$=REP(L$,27,6)820 T$=CHR(13)830 H$=H$&T$840 T$=CHR(19)850 H$=H$&T$860 PRINT @33,0:0,0,1870 FIND F880 PRINT @33:H$890 PRINT @33,0:0,0,0900 GO TO 290910 PRINT USING 920:920 IMAGE 10""S930 RETURN 